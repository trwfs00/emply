<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgJob"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_logo_job_box"
        android:visibility="visible"
        app:cardCornerRadius="123dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="14dp"
        android:layout_toEndOf="@id/imgJob">
        <TextView
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:id="@+id/JobName"
            android:text="Jobs"
            android:textSize="20sp"
            android:textColor="@color/font_dark"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:id="@+id/jobInc"
            android:text="Companies"
            android:textSize="12sp"
            android:textColor="@color/font_grey"
            android:layout_marginTop="3dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="28dp"/>
        <TextView
            android:id="@+id/jobSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000-25000 /month"
            android:textColor="@color/font_primary"
            android:layout_marginTop="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/jobSalary"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type1"
                android:textColor="#A1B3C2"
                android:background="@drawable/rounded_box"
                android:paddingHorizontal="10dp"
                android:textSize="10sp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/jobTypeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type2"
                android:textColor="#A1B3C2"
                android:background="@drawable/rounded_box"
                android:paddingHorizontal="11dp"
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>